/*
 * -----------------------------------------------------------------
 *  lifebit-ai/gwas test config file
 * -----------------------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 * nextflow run main.nf -profile test_binary_bolt_lmm

 */


docker.enabled = true

params  {

    pheno_data = "s3://marcos-lifebit/gel-gwas/cb_binary_pheno.phe"
    trait_type = "binary"
    genotype_files_list = "s3://lifebit-featured-datasets/projects/gel/gel-gwas/testdata/vcfs.csv"
    bolt_lmm = false
    regenie = true
    saige = false
    phenotype_colname = "PHE"
    //ld_scores = "https://gwas-reference-files.s3-eu-west-1.amazonaws.com/bolt-lmm/LDSCORE.1000G_EUR.tab.gz"
    bolt_lmm_quant_covariates = "PC{1:10}"
    bolt_lmm_categ_covariates = "sex"
    covariate_cols = "participant_phenotypic_sex"


    // Limit resources so that this can run on GitHub Actions
    max_cpus = 2
}